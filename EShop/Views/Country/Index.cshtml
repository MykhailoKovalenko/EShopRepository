@model IEnumerable<Country>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Country list</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Country" asp-action="Create" class="btn btn-primary">Add Country</a>
        </div>
    </div>
</div>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="80%">@obj.Name</td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No countries exists</p>
}

